<div class="container">
  <div class="d-flex justify-content-center">
   <div class="row">
    <div class="col-12">
     <h1>マイページ</h1>
    </div>
    <% if @user.is_user == true %>
    <div class="col-12">
     <%= image_tag @user.get_profile_image(200, 200), class: "profile" %>
    </div>
    <div class="col-12">
     <%= @user.name %>
    </div>
    <div class="col-12">
     <%= @user.name_kana %>
    </div>
    <div class="col-12">
     <%= @user.nick_name %>
    </div>
    <% elsif @user.is_user == false %>
    <div class="col-12">
     <%= image_tag @user.get_profile_image(200, 200), class: "profile" %>
    </div>
    <div class="col-12">
     <%= @user.name %>
    </div>
    <div class="col-12">
     <%= @user.name_kana %>
    </div>
    <div class="col-12">
     <%= @user.email %>
    </div>
    <div class="col-12">
     <%= @user.brand.brand_name %>
    </div>
    <div class="col-12">
     <%= @user.store.store_name %>
    </div>
    <% end %>
    <% unless current_user.id == @user.id %>
    <div class="col-12">
     <%= render 'public/relationships/btn', user: @user %>
    </div>
    <% else %>
    <div class="col-12">
     <%= link_to "編集", edit_public_user_path(@user) %>
    </div>
    <div class="col-12">
     <%= link_to "自分の投稿一覧", public_items_my_item_path %>
    </div>
    <% end %>
    <!--フォロー同士で表示に変更-->
    <% if current_user.id != @user.id %>
    <div class="col-12">
     <%= link_to "#{@user.name}さんとチャットする", public_chat_path(@user.id) %>
    </div>
    <% end %>
   </div>
  </div>
</div>


