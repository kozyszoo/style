<div class="user-page">
 <div class="container">
  <div class="row d-flex justify-content-center p-5">
   <h1 class="mypage-title">
    User page
   </h1>
  </div>
   <% if @user.is_user == true %>
   <div class="row">
    <div class="col-12 d-flex justify-content-center p-2">
     <%= image_tag @user.get_profile_image(200, 200), class: "profile" %>
    </div>
    <div class="col-12 d-flex justify-content-center p-2">
     <%= @user.name %>
    </div>
    <div class="col-12 d-flex justify-content-center p-2">
     <%= @user.name_kana %>
    </div>
    <div class="col-12 d-flex justify-content-center p-2">
     <%= @user.nick_name %>
    </div>
   </div>
   <% elsif @user.is_user == false %>
   <div class="row">
    <div class="col-12 d-flex justify-content-center p-2">
     <%= image_tag @user.get_profile_image(200, 200), class: "profile" %>
    </div>
    <div class="col-12 d-flex justify-content-center p-2">
     <%= @user.name %>
    </div>
    <div class="col-12 d-flex justify-content-center p-2">
     <%= @user.name_kana %>
    </div>
    <div class="col-12 d-flex justify-content-center p-2">
     <%= @user.brand.brand_name %>
    </div>
    <div class="col-12 d-flex justify-content-center p-2">
     <%= @user.store.store_name %>
    </div>
   </div>
   <% end %>
   <% unless current_user.id == @user.id %>
   <div class="row">
     <%= render 'public/relationships/btn', user: @user %>
    </div>
   <% else %>
     <div class="col-12 p-2">
     <%= link_to "投稿履歴", public_items_my_item_path, class: "btn btn-outline-secondary center-block" %>
     </div>
    </div>
   <% end %>
   <% unless current_user.email == 'guest@example.com' %>
    <div class="row">
     <div class="col-12 p-2">
     <%= link_to "編集", edit_public_user_path(@user), class: "btn btn-outline-secondary center-block" %>
     </div>
    </div>
   <% end %>
   <div class="row">
     <% if current_user.following?(@user) && @user.following?(current_user) %>
    <div class="col-12">
     <%= link_to "#{@user.name}さんとチャットする", public_chat_path(@user.id) %>
    </div>
     <% else %>
    <div class="col-12">
     相互フォローでチャットが可能になります
     </div>
     <% end %>
   </div>
  </div>
 </div>
</div>


<style>
 main{
     background-image: none;
   }
 h1.mypage-title{
  font-family: "Comic Sans MS"

 }
</style>

