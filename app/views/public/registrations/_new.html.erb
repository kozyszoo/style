<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "フルネーム" %>
</div>
<div class="field">
  <%= f.label :name_kana %>
  <%= f.text_field :name_kana, placeholder: "全角カナ" %>
</div>

<!--ラジオボタン切り替え-->
  <div id="only-customer">
   <div class="field">
    <%= f.label :nick_name %>
    <%= f.text_field :nick_name, placeholder: "３文字以上・８文字以内" %>
   </div>
  </div>

  <div id="only-clerk">
    <% brand_options = Brand.order(:id).map { |c| [c.brand_name, c.id, data: { children_path: public_brand_stores_path(c) }] } %>
    <div class="field">
      <%= f.label :brand_name %>
      <%= f.select :brand_id, brand_options, { include_blank: true }, class: 'select-parent' %>
    </div>
    <div class="field">
      <%= f.label :store_name %>
      <%= f.select :store_id, [], {}, class: 'select-children' %>
    </div>
  </div>
<!--ここまで-->

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "６文字以上２０字以内" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "６文字以上２０字以内" %>
  </div>
  <div class="actions mt-3">
    <%= f.submit "Sign up", class: "btn btn-secondary" %>
  </div>



<style>
 .btn-secondary{
    font-weight: 700;
    background: #CCCC99;
    border: 3px solid #FFFFFF;
    color: #FFFFFF;
 }
</style>