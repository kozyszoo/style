     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
   <div class="field">
     <%= f.label :所属ブランド %>
     <%= f.collection_select :brand_id, Brand.all, :id, :brand_name, prompt: "ブランドを選択してください" %>
   </div>

    <div class="field">
     <%= f.label :在籍店舗 %>
     <%= f.collection_select :store_id, Store.all, :id, :store_name, prompt: "店舗を選択してください" %>
    </div>
  
  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :確認パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

 </div>