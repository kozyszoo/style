<div class="container">
    <div class="row">
        <button type="comment morebutton" class="btn btn-outline-secondary w-100 m-3" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            menu <i class="fas fa-angle-double-down"></i>
        </button>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="collapse" id="collapseExample">
            <%= link_to public_items_privacy_path, class: 'btn btn-outline-dark' do %>
                非公開一覧
            <% end %>
            <%= link_to public_items_my_item_path, class: 'btn btn-outline-dark' do %>
                投稿履歴一覧
            <% end %>
            <%= link_to favorites_public_users_path, class: 'btn btn-outline-dark' do %>
                お気に入り一覧
            <% end %>
            <% if current_user.is_user == false %>
                <%= link_to public_items_clerk_path, class: 'btn btn-outline-dark' do %>
                    限定公開一覧へ切り替え
                <% end %>
            <% else %>
            <% end %>
        </div>
    </div>
</div>

