<%= render 'public/items/sidebar' %>
<div class="container">
  <div class="row test-cards">
   <% @items.each do |item| %>
     <div class="test-card">
      <%= link_to public_item_path(item) do %>
        <%= image_tag item.get_item_image(400, 400) %>
      <% end %>

      <% unless item.user == current_user %>
       <div id="favorite_btns_<%= item.id %>" class="favorite_mark">
        <%= render "public/favorites/btn", item: item %>
       </div>
      <% end %>
     </div>
   <% end %>
  </div>
  <div class="row p-3 d-flex justify-content-center">
   <%= paginate @items %>
  </div>
 </div>

<style>
 .pagination>li>a {
  border: none;
  color: #696969;
}

.pagination>.active>a {
  background: #CC99CC;
  border-radius: 15px;
}
.pagination>li>a:hover {
  border-radius: 15px;
}
.page-item.active .page-link {
    background-color: #CC99CC;
    border-color: #CC99CC;
}

.img{
 position: relative;
}

.card-btn{
 position: absolute;
 top: 90%;
 left: 70%;
}

.test-cards {
 display: flex;
 flex-wrap: wrap;
 gap: 24px;
}

.test-card img {
 width: 100%;
 height: 100%;
 object-fit: cover;
}

.test-card {
  position: relative;
  width: calc((100% - 24px * 2) / 3);
  max-width: calc(100% - 24px * 2) / 3;
  -moz-box-shadow: 15px 20px 31px -26px rgba(0, 0, 0, 0.8);
-webkit-box-shadow: 15px 20px 31px -26px rgba(0, 0, 0, 0.8);
-ms-box-shadow: 15px 20px 31px -26px rgba(0, 0, 0, 0.8);
box-shadow: 15px 20px 31px -26px rgba(0, 0, 0, 0.8);
}

.favorite_mark {
 position: absolute;
 right: 8px;
 bottom: 8px;
}

</style>