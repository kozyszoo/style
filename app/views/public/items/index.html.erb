<h1>投稿一覧</h1>


<div><%= link_to "新規投稿", new_public_item_path %></div>

<% @items.each do |item| %>

  <%= image_tag item.get_item_image(200, 200) %>

  <%= image_tag item.user.get_profile_image(50, 50), class: "rounded-circle" %>

  <%= link_to item.user.nick_name, public_user_path(item.user.id)  %>

  <%= item.brand.brand_name %>


  <!--いいね非同期-->
  <% unless item.user == current_user %>
   <div id = "favorite_btns_<%= item.id %>">
   <p><%= render "public/favorites/btn", item: item %></p>
   </div>
  <% else %>
  <% end %>

  <% if item.user == current_user %>
     <p><%= button_to "削除", public_item_path(item), method: :delete %></p>
  <% else %>
  <% end %>
  <p><%= link_to "詳細", public_item_path(item) %></p>
<% end %>



<% if user_signed_in? %>
 <%= link_to "非公開一覧", public_items_privacy_path %>
<% else %>
<% end %>

<% if current_user.is_user == false %>
 <%= link_to "店舗スタッフ限定公開", public_items_clerk_path %>
<% else %>
<% end %>



