<div class="container">
  <div class="d-flex justify-content-center">
   <div class="row">
    <%= form_with model: @item, url: public_item_path(@item), method: :patch do |f| %>
     <table>
      <tbody>
       <div class="col-12">
        <tr>
         <div class="images">
          <th><%= f.label :投稿画像 %></th>
          <td><%= f.file_field :item_image, placeholder: "画像", accept: 'image/*' %></td>
         </div>
        </tr>
       </div>
       <div class="col-12">
        <tr>
         <div class="field">
          <th><%= f.label :説明文 %></th>
          <td><%= f.text_field :text %></td>
         </div>
        </tr>
       </div>
       <div class="col-12">
        <tr>
         <div class="select">
          <th><%= f.label :ブランド %></th>
          <td><%= f.select :brand_id, options_from_collection_for_select(Brand.all, :id, :brand_name) %></td>
         </div>
        </tr>
       </div>
       <div class="col-12">
        <tr>
         <div class="select">
          <th><%= f.label :ステータス %></th>
          <td><%= f.select :status, Item.statuses.keys.map { |k| [t("enums.item.status.#{k}"), k] } %></td>
         </div>
        </tr>
       </div>
       <div class="col-12">
        <tr>
         <th></th>
         <td><%= f.submit "変更する" %></td>
        </tr>
       </div>
       <% end %>
      </tbody>
     </table>
    </div>
   </div>
  </div>

