<%= render 'public/items/sidebar' %>
<div class="container">
  <% if @close_items.present? %>
   <div class="row item-cards">
    <% @close_items.each do |item| %>
    <div class="item-card">
        <%= link_to public_item_path(item) do %>
         <%= image_tag item.get_item_image(400, 400) %>
        <% end %>
        <div class="btn_mark p-3">
         <%= item.created_at.strftime("%Y-%m-%d") %>
        </div>
        <% unless item.user == current_user %>
         <div id = "favorite_btns_<%= item.id %>" class="btn_mark">
          <%= render "public/favorites/btn", item: item %>
         </div>
        <% end %>
        <% if item.user == current_user %>
         <div class="btn_mark">
          <%= link_to public_item_path(item), method: :delete, data: {confirm: "削除しますか？"} do %>
           <i class="far fa-trash-alt fa-lg"></i>
          <% end %>
         </div>
        <% end %>
      </div>
     <% end %>
    </div>
  <% else %>
   <p class ="d-flex justify-content-center p-5">投稿が存在しません</p>
  <% end %>
  <%= paginate @close_items %>
 </div>

 <style>
 .pagination>li>a {
  border: none;
  color: #696969;
}

.pagination>.active>a {
  background: #CC99CC;
  border-radius: 15px;
}
.pagination>li>a:hover {
  border-radius: 15px;
}
.page-item.active .page-link {
    background-color: #CC99CC;
    border-color: #CC99CC;
}

 .img{
 position: relative;
}

.btn_mark {
  position: absolute;
  right: 8px;
  bottom: 8px;
}
</style>