<%= render 'public/items/sidebar' %>
<div class="container">
  <% if @close_items.present? %>
    <div class="row item-cards">
      <% @close_items.each do |item| %>
        <div class="item-card">
          <%= link_to public_item_path(item) do %>
            <%= image_tag item.get_item_image(400, 400) %>
          <% end %>
          <div class="above_image p-4">
            <%= item.created_at.strftime("%Y-%m-%d") %>
          </div>
          <div class="above_image">
            <%= link_to public_item_path(item), method: :delete, data: {confirm: "削除しますか？"} do %>
              <i class="far fa-trash-alt fa-lg"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class ="d-flex justify-content-center p-5">投稿が存在しません</p>
  <% end %>

  <%= paginate @close_items %>
 </div>

 <style>
 .pagination>li>a {
  border: none;
  color: #696969;
}

.pagination>.active>a {
  background: #CC99CC;
  border-radius: 15px;
}
.pagination>li>a:hover {
  border-radius: 15px;
}
.page-item.active .page-link {
    background-color: #CC99CC;
    border-color: #CC99CC;
}

 .img{
 position: relative;
}

.above_image {
  position: absolute;
  right: 8px;
  bottom: 8px;
}
</style>