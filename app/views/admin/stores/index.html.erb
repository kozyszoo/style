<h1>店舗一覧</h1>

<%= form_with model: @store, url: admin_stores_path, method: :post do |f| %>

  <%= f.collection_select :brand_id, Brand.all, :id, :brand_name, prompt: "ブランドを選択" %>

  <%= f.text_field :store_name, placeholder: "店舗名を入力" %>

  <%= f.submit "登録" %>
<% end %>



<h4>店舗リスト</h4>

<% @stores.each do |store| %>
   <%= store.brand.brand_name %>
   <%= store.store_name %><br>
<% end %>



