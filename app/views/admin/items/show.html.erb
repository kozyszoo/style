<h1>投稿詳細</h1>


 <%= image_tag @item.get_item_image(200, 200) %>

 <%= @item.created_at.strftime("%Y-%m-%d %H:%M:%S") %>

 <%= @item.user.name %>

 <%= @item.text %>

 <%= @item.brand.brand_name %>

 <%= @item.status_i18n %>

 コメント<%= @item.comments.count %>件

 <% if @item.comments.present? %>
   <% @item.comments.each do |comment| %>
     <%= comment.user.name %>
     <%= comment.text %>
     <%= link_to "削除", admin_item_comment_path(item_id: @item, comment_id: comment), method: :delete %>
    <% end %>
 <% end %>
