<div class="homes-main">
  <div class="container">
      <div class="row d-flex justify-content-center p-5 mx-auto">
        <%= image_tag 'C22232BC-C508-4F45-9244-B7A02387A6C3.jpg', class: 'logo' %>
      </div>
    <div class="row p-3 justify-content-center">
      <div class="col-3">
        <%= link_to "Log in", new_user_session_path, class: "btn btn-secondary center-block" %>
      </div>
      <div class="col-3">
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-secondary center-block" %>
      </div>
    </div>
    <div class="row d-flex justify-content-center pt-5">
      <h6><%= link_to 'guest', public_guests_path, method: :post, class: "guest-btn btn btn btn-secondary center-block" %></h6>
    </div>
  </div>
</div>


<style>
  main{
    background-image: none;
  }

  .logo{
    width: 300px;
    height: 300px;
    box-shadow: 0 0 10px black;
  }

  .btn-secondary{
    padding: 10px 70px;
    font-weight: 700;
    background: #CCCC99;
    border: 3px solid #FFFFFF;
    color: #FFFFFF;
    display: flex;
    justify-content: center;
  }

  .guest-btn{
    padding: 10px 100px;
    font-weight: 700;
    background: #67b5b7;
    border: 3px solid #FFFFFF;
  }

</style>